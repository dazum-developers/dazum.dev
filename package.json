{
  "name": "dazum-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build --filter=@dazum/web",
    "dev": "turbo dev --filter=@dazum/web",
    "lint": "turbo lint",
    "lint:fix": "eslint ./ --ext .ts --ext .tsx --fix",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@dazum/config": "*",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "turbo": "latest"
  },
  "lint-staged": {
    "(apps|packages)/**/*.{js,ts,jsx,tsx}": [
      "yarn run format",
      "yarn run lint:fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=18.x",
    "npm": ">=7.0.0",
    "yarn": ">=1.19.0 < 2.0.0"
  }
}
